{
  "name": "poll-backend",
  "version": "1.0.0",
  "description": "Backend for the poll application",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "dev": "tsc -w & nodemon dist/server.js",
    "update-schema": "get-graphql-schema http://localhost:3001/graphql > schema.graphql",
    "generate": "npm run update-schema",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "sqlite3": "^5.0.2",
    "bcrypt": "^5.0.1",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "get-graphql-schema": "^2.1.2",
    "typescript": "^4.5.4",
    "@types/node": "^17.0.8",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/cors": "^2.8.12",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "nodemon": "^2.0.15"
  }
}
