{
  "name": "poll-backend",
  "version": "1.0.0",
  "description": "Backend for the poll application",
  "main": "dist/server.js",
  "scripts": {
    "start": "node -r tsconfig-paths/register dist/server.js",
    "build": "tsc",
    "dev": "nodemon --watch . --ext ts,json --exec ts-node -r tsconfig-paths/register server.ts",
    "update-schema": "get-graphql-schema http://localhost:3001/graphql > ../shared/schema.graphql",
    "generate": "npm run update-schema"
  },
  "dependencies": {
    "@apollo/server": "^4.10.5",
    "@graphql-tools/schema": "^10.0.25",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^16.9.0",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.0.2",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "get-graphql-schema": "^2.1.2",
    "nodemon": "^2.0.15",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}