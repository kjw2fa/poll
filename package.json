{
  "name": "poll",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
    "build": "npm run build --workspaces",
    "start": "npm run start --workspace=server",
    "test": "npm run test --workspaces",
    "codegen": "npm run codegen --workspaces",
    "db:setup": "npm run db:create && npm run db:createuser && npm run db:grant && npm run db:migrate && npm run db:generate",
    "db:create": "createdb poll || true",
    "db:createuser": "psql -d poll -c \"CREATE USER polluser;\" || true",
    "db:grant": "psql -d poll -c \"ALTER USER polluser WITH SUPERUSER;\"",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate"
  },
  "prisma": {
    "schema": "server/prisma/schema.prisma"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^6.0.0",
    "@graphql-codegen/import-types-preset": "^3.0.1",
    "@graphql-codegen/typescript": "^5.0.0",
    "@graphql-codegen/typescript-operations": "^5.0.0",
    "@graphql-codegen/typescript-resolvers": "^5.0.0",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@apollo/server": "^4.10.5",
    "@prisma/client": "^6.17.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "graphql": "^16.9.0",
    "prisma": "^6.17.1",
    "vite-plugin-relay": "^2.1.0"
  }
}
