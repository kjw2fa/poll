{
  "name": "poll",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm run dev -w client",
    "build": "npm run build -w client && npm run build -w server",
    "start:client": "npm run start -w client",
    "start:server": "npm run start -w server",
    "test": "npm test -w client",
    "relay": "relay-compiler --schema ./shared/schema.graphql --src ./client/src",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^6.0.0",
    "@graphql-codegen/typescript": "^5.0.0",
    "@graphql-codegen/typescript-operations": "^5.0.0",
    "@graphql-codegen/typescript-resolvers": "^5.0.0",
    "relay-compiler": "^20.1.1",
    "typescript": "^5.9.2"
  }
}